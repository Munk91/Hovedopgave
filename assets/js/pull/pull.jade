.alert.alert-danger(ng-show="PullCtrl.error")
    strong(ng-bind="PullCtrl.error")
  .alert.alert-success(ng-show="PullCtrl.success")
    strong(ng-bind="PullCtrl.success")
.pull-data
  h3 Upload API endpoint
    form(ng-submit="PullCtrl.pullData(index, type, apiUrl)")
      .form-group
        label(for="index") Index
        input.form-control(type="text" id="index" placeholder="Index" ng-model="index" required)

        label(for="type") Type
        input.form-control(type="text" id="type" placeholder="Type" ng-model="type" required)

        label(for="api") API URL
        input.form-control(type="text" id="api" placeholder="API URL" ng-model="apiUrl" required)

        button.btn.btn-primary.validate-button(type="submit" ng-click="PullCtrl.ValidateAPIEndpoint()" ng-disabled="true") Valid√©r API endpoint
        button.btn.btn-success.save-button(type="submit" ng-disabled="PullCtrl.saveButtonDisabled") Gem API endpoint
