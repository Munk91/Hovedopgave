p Statistikker
  .dropdown
    button.btn.btn-default.dropdown-toggle(type="button", id="statisticIndexes" data-toggle="dropdown" aria-haspopup="true") {{ StatisticsCtrl.activeStatisticIndex }}
      span.caret
    ul.dropdown-menu(aria-labelledby="statisticIndexes")
      li(ng-repeat="statistic in StatisticsCtrl.statistics")
        a(ng-click="StatisticsCtrl.getStatsTypes(statistic)")
          {{ statistic.index }}
  .dropdown
    button.btn.btn-default.dropdown-toggle(type="button", id="statisticTypes" data-toggle="dropdown" aria-haspopup="true") {{ StatisticsCtrl.activeStatisticType }}
      span.caret
    ul.dropdown-menu(aria-labelledby="statisticTypes")
      li(ng-repeat="statsType in StatisticsCtrl.activeStatisticTypeList")
        a(ng-click="StatisticsCtrl.activeStatisticType = statsType" ui-sref="statistic.statistics.show({statsTypeId : statsType})")
          {{ statsType }}
    button.btn.btn-default(type="button", id="getStatistics" ng-click="StatisticsCtrl.showStatistics(StatisticsCtrl.activeStatisticIndex, StatisticsCtrl.activeStatisticType)") Hent

